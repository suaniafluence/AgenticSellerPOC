# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CRM Configuration (Mock)
HUBSPOT_API_KEY=your_hubspot_api_key_here
SALESFORCE_API_KEY=your_salesforce_api_key_here

# Memory/Vector DB Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=optional_api_key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Agent Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
TEMPERATURE=0.7
MAX_ITERATIONS=10

# ============================================
# Google OAuth Configuration (MFA)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your_super_secret_key_here

# ============================================
# Authorized Emails (comma-separated)
# ============================================
# These users can log in with Google OAuth
# Leave empty to use database-only mode
AUTHORIZED_EMAILS=your.email@gmail.com,colleague@company.com

# ============================================
# Web Application Configuration
# ============================================
APP_URL=http://localhost:8000
DEBUG=true

# Database URL (SQLite by default)
DATABASE_URL=sqlite+aiosqlite:///./data/users.db
